<section id="section-{{ section.id }}" class="Section Section--spacingNormal" data-section-id="{{ section.id }}" data-section-type="countdown-bar">
   
   {% assign year = section.settings.year %}
   {% assign month = section.settings.month %}
   {% assign days = section.settings.days %}
   {% assign hours = section.settings.hours %}
   {% assign minutes = section.settings.minutes %}
   {% assign seconds = section.settings.seconds %}
   
   <div class="countdown-date" data-date="{{ month }} {{ days }}, {{ year }} {{ hours }}:{{ minutes }}:{{ seconds }}">
     {% comment %}<div id="displaydate" ></div>{% endcomment %}

     <div class="countdown-banner__inner">
      <div class="countdown-banner__overlay"></div>
      <div class="countdown-banner__content">
        <div class="countdown-banner__bar">
          <div class="countdown-banner__bar-item countdown-banner__bar-item--heading" style="--delay-offset-multiplier:0;">
            {% if section.settings.heading != blank %}
            <h4 class="ff-heading">{{ section.settings.heading }}</h4>
            {% endif %}
          </div>
          <div class="countdown-banner__bar-item countdown-banner__bar-item--timer" style="--delay-offset-multiplier:1;">
            <div class="countdown-timer countdown-timer--small active complete" data-countdown-timer="">
              <div class="countdown-timer__inner" display-date>
                <div class="countdown-timer__item">
                  <div class="countdown-timmer__amount ff-heading" display-days>0</div>
                  <div class="countdown-timer__type fs-accent">Days</div>
                </div>
                <div class="countdown-timer__item">
                  <div class="countdown-timmer__amount ff-heading" display-hours>0</div>
                  <div class="countdown-timer__type fs-accent">Hours</div>
                </div>
                <div class="countdown-timer__item">
                  <div class="countdown-timmer__amount ff-heading" display-minutes></div>
                  <div class="countdown-timer__type fs-accent">Minutes</div>
                </div>
                <div class="countdown-timer__item">
                  <div class="countdown-timmer__amount ff-heading" display-seconds>0</div>
                  <div class="countdown-timer__type fs-accent">Seconds</div>
                </div>
              </div>
              <div class="
            countdown-timer__message
            section-blocks__text
            rte
            fs-body-75
          "></div>
            </div>
          </div>
          <div class="countdown-banner__bar-item countdown-banner__bar-item--text">
            {% if section.settings.text != blank %}
            <div class="countdown-banner__bar-text rte">
              <p>{{ section.settings.text }}</p>
            </div>
            {% endif %}

            {% if section.settings.button_label != blank %}
            <div class="button-block__button button-block__button--justify- button-block__button--justify-mobile- countdown-banner__button">
              <a href="{{ section.settings.button_link }}" class="btn btn--overlay btn--small btn--secondary">
                <span>{{ section.settings.button_label }}</span>
              </a>
            </div>
            {% endif %}

          </div>
        </div>
      </div>
    </div>

   </div>

 


</section>
 
<style>
  #shopify-section-{{section.id}} .countdown-banner__inner {
    background-color: {{ section.settings.backgrond_color }};
    color: {{  section.settings.text_color }}; 
  }
  #shopify-section-{{section.id}} .countdown-banner__inner a.btn--secondary{
    color: {{  section.settings.text_color }}; 
    border-color: {{  section.settings.text_color }}; 
  }
  .countdown-timer__item+.countdown-timer__item .countdown-timmer__amount:before{
    background-color:   {{  section.settings.text_color }}; 
  }
  #shopify-section-{{section.id}} [data-section-type="countdown-bar"] {
    {% if section.settings.top_space == true %}
      margin-top: 0;
    {% endif %}
    {% if section.settings.bottom_space == true %}
      margin-bottom: 0;
    {% endif %}
  }
</style>
